<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD plugin 1.0//EN"
	"http://www.joomla.org/xml/dtd/1.5/plugin-install.dtd">
<install group="authentication" type="plugin" version="1.5">
	<name>Authentication - Mailbox</name> 
	<author>Kevin Locke</author> 
	<creationDate>December 2010</creationDate>
	<copyright>
		Copyright (C) 2010-2011 Digital Engine Software, LLC. &lt;klocke@digitalenginesoftware.com&gt;
		Copyright (C) 2012-2014, 2016 Kevin Locke &lt;kevin@kevinlocke.name&gt;
	</copyright>
	<license>GNU General Public License version 2 or later; see COPYING.txt</license>
	<authorEmail>kevin@kevinlocke.name</authorEmail>
	<authorUrl>https://github.com/kevinoid/auth-mailbox-joomla</authorUrl>
	<version>1.0.8</version>
	<description>PLUGINDESC</description>
	<files>
		<filename plugin="mailbox">mailbox.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_authentication_mailbox.ini</language>
	</languages>
	<params>
		<param name="mail_domain" type="text" default="example.com" label="PARAMDOMAINLABEL" description="PARAMDOMAINDESC" />
		<param name="mail_domain_username" type="radio" default="0" label="PARAMDOMAINUSERLABEL" description="PARAMDOMAINUSERDESC">
			<option value="1">PARAMVALYES</option>
			<option value="0">PARAMVALNO</option>
		</param>
		<param name="mail_domain_in_joomla_username" type="radio" default="0" label="PARAMDOMAINJUSERLABEL" description="PARAMDOMAINJUSERDESC">
			<option value="1">PARAMVALYES</option>
			<option value="0">PARAMVALNO</option>
		</param>
		<param name="mail_server" type="text" default="localhost" label="PARAMSERVERLABEL" description="PARAMSERVERDESC" />
		<param name="mail_protocol" type="list" default="0" label="PARAMPROTOLABEL" description="PARAMPROTODESC">
			<option value="imap">IMAP</option>
			<option value="nntp">NNTP</option>
			<option value="pop3">POP3</option>
		</param>
		<param name="create_users" type="radio" default="1" label="PARAMCREATEUSERSLABEL" description="PARAMCREATEUSERSDESC">
			<option value="1">PARAMVALYES</option>
			<option value="0">PARAMVALNO</option>
		</param>

		<param name="@spacer" type="spacer" default="" label="" description="" />

		<param name="mail_port" type="text" default="" label="PARAMPORTLABEL" description="PARAMPORTDESC" />
		<param name="mail_allow_plaintext" type="radio" default="0" label="PARAMALLOWPLAINLABEL" description="PARAMALLOWPLAINDESC">
			<option value="1">PARAMVALYES</option>
			<option value="0">PARAMVALNO</option>
		</param>
		<param name="mail_encryption" type="list" default="1" label="PARAMENCRYPTLABEL" description="PARAMENCRYPTDESC">
			<option value="0">PARAMVALENCRYPTNONE</option>
			<option value="1">PARAMVALENCRYPTTLSOPT</option>
			<option value="2">PARAMVALENCRYPTTLSREQ</option>
			<option value="3">PARAMVALENCRYPTSSL</option>
		</param>
		<param name="mail_validate_cert" type="radio" default="1" label="PARAMVALIDCERTLABEL" description="PARAMVALIDCERTDESC">
			<option value="1">PARAMVALYES</option>
			<option value="0">PARAMVALNO</option>
		</param>
		<param name="show_imap_errors" type="radio" default="0" label="PARAMIMAPERRLABEL" description="PARAMIMAPERRDESC">
			<option value="1">PARAMVALYES</option>
			<option value="0">PARAMVALNO</option>
		</param>
	</params>
</install>
