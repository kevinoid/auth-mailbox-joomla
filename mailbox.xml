<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="authentication" version="3.0" client="site" method="upgrade">
	<name>plg_authentication_mailbox</name>
	<author>Kevin Locke</author>
	<creationDate>December 2010</creationDate>
	<copyright>
		Copyright (C) 2010-2011 Digital Engine Software, LLC. &lt;klocke@digitalenginesoftware.com&gt;
		Copyright (C) 2012-2013 Kevin Locke &lt;kevin@kevinlocke.name&gt;
	</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>kevin@kevinlocke.name</authorEmail>
	<authorUrl>https://github.com/kevinoid/auth-mailbox-joomla</authorUrl>
	<version>1.0.7</version>
	<description>PLG_AUTH_MAILBOX_XML_DESCRIPTION</description>
	<files>
		<filename plugin="mailbox">mailbox.php</filename>
	</files>
	<updateservers>
		<server type="extension" priority="1" name="Mailbox Authentication Plugin on GitHub">https://raw.github.com/kevinoid/auth-mailbox-joomla/master/mailbox-updates.xml</server>
	</updateservers>
	<languages>
		<language tag="en-GB">en-GB.plg_authentication_mailbox.ini</language>
		<language tag="en-GB">en-GB.plg_authentication_mailbox.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="mail_domain" type="text" default="example.com" label="PARAMDOMAINLABEL" description="PARAMDOMAINDESC" />
				<field name="mail_domain_username" type="radio" default="0" label="PARAMDOMAINUSERLABEL" description="PARAMDOMAINUSERDESC">
					<option value="1">PARAMVALYES</option>
					<option value="0">PARAMVALNO</option>
				</field>
				<field name="mail_server" type="text" default="localhost" label="PARAMSERVERLABEL" description="PARAMSERVERDESC" />
				<field name="mail_protocol" type="list" default="0" label="PARAMPROTOLABEL" description="PARAMPROTODESC">
					<option value="imap">IMAP</option>
					<option value="nntp">NNTP</option>
					<option value="pop3">POP3</option>
				</field>
				<field name="create_users" type="radio" default="1" label="PARAMCREATEUSERSLABEL" description="PARAMCREATEUSERSDESC">
					<option value="1">PARAMVALYES</option>
					<option value="0">PARAMVALNO</option>
				</field>
			</fieldset>

			<fieldset name="advanced">
				<field name="mail_port" type="text" default="" label="PARAMPORTLABEL" description="PARAMPORTDESC" />
				<field name="mail_allow_plaintext" type="radio" default="0" label="PARAMALLOWPLAINLABEL" description="PARAMALLOWPLAINDESC">
					<option value="1">PARAMVALYES</option>
					<option value="0">PARAMVALNO</option>
				</field>
				<field name="mail_encryption" type="list" default="1" label="PARAMENCRYPTLABEL" description="PARAMENCRYPTDESC">
					<option value="0">PARAMVALENCRYPTNONE</option>
					<option value="1">PARAMVALENCRYPTTLSOPT</option>
					<option value="2">PARAMVALENCRYPTTLSREQ</option>
					<option value="3">PARAMVALENCRYPTSSL</option>
				</field>
				<field name="mail_validate_cert" type="radio" default="1" label="PARAMVALIDCERTLABEL" description="PARAMVALIDCERTDESC">
					<option value="1">PARAMVALYES</option>
					<option value="0">PARAMVALNO</option>
				</field>
				<field name="show_imap_errors" type="radio" default="0" label="PARAMIMAPERRLABEL" description="PARAMIMAPERRDESC">
					<option value="1">PARAMVALYES</option>
					<option value="0">PARAMVALNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
<!-- vi: set fileencoding=utf-8 nobomb sts=4 sw=4 ts=4 noet : -->
